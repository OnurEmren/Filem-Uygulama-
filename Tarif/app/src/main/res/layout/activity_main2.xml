<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe6e9"
    android:padding="20dp"
    tools:context=".view.activity.MainActivity2">


    <androidx.cardview.widget.CardView
        android:id="@+id/alisverisYap"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="251dp"
        android:background="@color/white"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="center"
            android:text="Alışveriş Listesi Hazırla"
            android:textColor="@color/purple_700"
            android:textSize="17sp"

            >

        </TextView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/white"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/cart">

        </com.airbnb.lottie.LottieAnimationView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tarifHazirla"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alisverisYap"
        app:layout_constraintVertical_bias="0.132">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="center"
            android:text="Kolay Yemek Tarifleri"
            android:textColor="@color/purple_700"
            android:textSize="17sp">

        </TextView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/food">

        </com.airbnb.lottie.LottieAnimationView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/menuHazirla"
        android:layout_width="170dp"
        android:layout_height="170dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alisverisYap"
        app:layout_constraintVertical_bias="0.868">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="center"
            android:text="Menü Hazırla"
            android:textColor="@color/purple_700"
            android:textSize="17sp">

        </TextView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation3"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:background="@color/white"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/menu">

        </com.airbnb.lottie.LottieAnimationView>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>